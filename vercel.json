{
    "version": 2,
    "builds": [
      {
        "src": "api/main.py",
        "use": "@vercel/python",
        "config": { "includeFiles": ["api/**"] }
      },
      {
        "src": "src/main.jsx",
        "use": "@vercel/node"
      },
      {
        "src": "public",
        "use": "@vercel/static"
      }
    ],
    "routes": [
      { "src": "/api/(.*)", "dest": "api/app.py" },
      { "src": "/(.*)", "dest": "src/main.jsx" }
    ]
  }
  